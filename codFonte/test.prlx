This is program Num.
It presents:
    unalterable number Tamanho = 6;
    vector of number (Tamanho) Lista;
    alterable number Aux, I, J;

Let us begin:
    Lista(1) := - 9;
    Lista(2) := 6;
    Lista(3) := 0;
    Lista(4) := 3;
    Lista(5) := 7;
    Lista(6) := 2;
    
    considering I from 1 to Tamanho by 1
    do [
        alterable answer Trocou := no;
        considering J from 1 to Tamanho - I by 1
        do [
            just in case that ( Lista(J) > Lista(J+1) )
            do [
                Aux := Lista(J);
                Lista(J) := Lista(J+1);
                Lista(J+1) := Aux;
                Trocou := yes;
            ]
        ]
        just in case that ( !Trocou ) 
        do
            go to next iteration;
    ]

    considering I from 1 to Tamanho by 1
    do [
        show(Lista(I));
    ]
    
    Lista(1) := 9;
    Lista(2) := 6;
    Lista(3) := 0;
    Lista(4) := 3;
    Lista(5) := 7;
    Lista(6) := 2;

    considering I from 1 to Tamanho by 1
    do [
        alterable answer Trocou := no;
        considering J from 1 to Tamanho - I by 1
        do [
            just in case that ( Lista(J) < Lista(J+1) )
            do [
                Aux := Lista(J);
                Lista(J) := Lista(J+1);
                Lista(J+1) := Aux;
                Trocou := yes;
            ]
            otherwise 
            do 
                go to next iteration;
        ]
        just in case that ( !Trocou ) 
        do
            go to next iteration;
    ]

    considering I from 1 to Tamanho by 1
    do [
        show(Lista(I));
    ]
    
    Aux := Lista(1);
    considering I from 2 to Tamanho by 1
    do [
        Aux := Aux + Lista(I);
    ]
    
    show(Aux);

    Aux := Lista(1);
    considering I from 2 to Tamanho by 1
    do [
        Aux := Aux - Lista(I);
    ]

    show(Aux);

    considering I from 1 to Tamanho by 1
    do [
        Lista(I) := 2 * Lista(I);
    ]

    considering I from 1 to Tamanho by 1
    do [
        show(Lista(I));
    ]
    
    Aux := Lista(1);
    considering I from 2 to Tamanho by 1
    do [
        Aux := Aux + Lista(I);
    ]
    Aux := Aux / Tamanho;

    show(Aux);

